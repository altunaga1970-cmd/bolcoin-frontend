# ===========================================
# LA BOLITA FRONTEND - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# API Configuration
# ===========================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENV=development

# ===========================================
# Blockchain Configuration (Polygon)
# ===========================================

# Chain ID: 137 = Mainnet, 80002 = Amoy Testnet, 31337 = Local Hardhat
REACT_APP_CHAIN_ID=137

# La Bolita Main Contract Address
REACT_APP_CONTRACT_ADDRESS=0x...

# USDT Token Address on Polygon
# Mainnet: 0xc2132D05D31c914a87C6611C10748AEb04B58e8F
# Amoy: Use test token address
REACT_APP_TOKEN_ADDRESS=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

# ===========================================
# Chainlink VRF Configuration
# ===========================================

# VRF Coordinator Address (Polygon Mainnet)
REACT_APP_VRF_COORDINATOR=0xAE975071Be8F8eE67addBC1A82488F1C24858067

# ===========================================
# Feature Flags
# ===========================================

# Enable geoblocking for restricted jurisdictions
REACT_APP_ENABLE_GEOBLOCK=true

# Enable maintenance mode (shows maintenance page)
REACT_APP_MAINTENANCE_MODE=false

# Enable debug mode (extra console logging)
REACT_APP_DEBUG=false

# ===========================================
# Analytics (Optional)
# ===========================================

# Google Analytics ID
# REACT_APP_GA_ID=G-XXXXXXXXXX

# ===========================================
# Network RPC URLs (Optional fallbacks)
# ===========================================

# Custom RPC URL (if not using default)
# REACT_APP_RPC_URL=https://polygon-rpc.com

# ===========================================
# WalletConnect (REQUERIDO para multi-wallet)
# ===========================================

# WalletConnect Project ID - REQUERIDO para conectar wallets m√≥viles
# Obtener gratis en: https://cloud.walletconnect.com/
REACT_APP_WALLETCONNECT_PROJECT_ID=
