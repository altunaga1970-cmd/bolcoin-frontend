# ===========================================
# BOLCOIN FRONTEND - Environment Variables (Vite)
# ===========================================
# Copy this file to .env and fill in your values
# All variables must use VITE_ prefix for Vite to expose them

# ===========================================
# API Configuration
# ===========================================
VITE_API_URL=http://localhost:5000/api

# ===========================================
# Blockchain Configuration
# ===========================================

# Chain ID: 137 = Polygon Mainnet, 80002 = Amoy Testnet, 31337 = Local Hardhat
VITE_CHAIN_ID=137

# La Bolita Main Contract Address
VITE_CONTRACT_ADDRESS=0x...

# USDT Token Address on Polygon
# Mainnet: 0xc2132D05D31c914a87C6611C10748AEb04B58e8F
# Amoy: Use test token address
VITE_TOKEN_ADDRESS=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

# ===========================================
# WalletConnect (REQUERIDO para multi-wallet)
# ===========================================

# WalletConnect Project ID - REQUERIDO para conectar wallets moviles y WalletConnect
# Sin esto, solo MetaMask (injected) funcionara.
# Obtener gratis en: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=

# ===========================================
# Feature Flags (Optional)
# ===========================================

# Enable geoblocking for restricted jurisdictions
VITE_ENABLE_GEOBLOCK=false

# Enable debug mode (extra console logging)
VITE_DEBUG=false
